# PDF Parser Configuration Template
# Copy this file to .env and customize for your environment

# Application Settings
# --------------------
# Application name (used in logs and API responses)
PDF_PARSER_APP_NAME=pdf_parser

# Temporary directory for file uploads and processing
PDF_PARSER_TEMP_DIR=/tmp/pdf_parser

# Maximum upload size in megabytes
PDF_PARSER_MAX_UPLOAD_MB=25

# Logging Configuration
# ---------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
PDF_PARSER_LOG_LEVEL=INFO

# Log format: json (production) or text (development)
PDF_PARSER_LOG_FORMAT=json

# Authentication
# --------------
# Comma-separated API keys for authentication
# If empty, authentication is disabled (not recommended for production)
# Example: PDF_PARSER_API_KEYS=key1,key2,key3
PDF_PARSER_API_KEYS=123

# Server Configuration
# --------------------
# Number of worker processes (default: 2)
# Recommended: (2 x CPU cores) + 1
PDF_PARSER_WORKERS=2

# Worker timeout in seconds (default: 600 / 10 minutes)
# Increase for large PDF processing
PDF_PARSER_WORKER_TIMEOUT=600

# Docling Configuration
# ---------------------
# Number of threads for document processing
PDF_PARSER_DOCLING_NUM_THREADS=2

# Device for processing: auto (GPU if available, else CPU), cpu, or cuda
PDF_PARSER_DOCLING_DEVICE=auto

# Processing timeout in seconds (null for no timeout)
PDF_PARSER_DOCLING_TIMEOUT_S=500.0

# Maximum number of pages per document
PDF_PARSER_DOCLING_MAX_NUM_PAGES=300

# Maximum file size in megabytes for Docling processing
PDF_PARSER_DOCLING_MAX_FILE_SIZE_MB=25
